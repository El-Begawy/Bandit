<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/LikesCount"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="80dp"
            android:text="Likes" />

        <ImageView
            android:id="@+id/LikeImage"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/android_like_image" />

        <TextView
            android:id="@+id/PostSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/song_name"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/PostSongAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/album_name"
            android:textColor="#0F0F0F"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/PostAlbumPicture"
                android:layout_width="103dp"
                android:layout_height="103dp"
                android:contentDescription="AlbumWallPaper"
                android:scaleType="fitXY"
                app:srcCompat="@android:color/background_dark" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/DislikeImage"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_marginStart="330dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/android_unlike_image" />

        <TextView
            android:id="@+id/DislikesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="290dp"
            android:layout_marginTop="80dp"
            android:text="Dislikes" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>